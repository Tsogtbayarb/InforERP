	extern  domain  tccprj		cprj.f    fixed
	extern  domain  tccprj          cprj.t    fixed
	extern  domain  tcorno          vers.f    fixed
	extern  domain  tcorno          vers.t    fixed
	extern  domain  tfgld.user	apby.f
	extern  domain  tfgld.user	apby.t
