choice.cont.generate:
before.choice:
	if tdisg831.invd = 0 then
		message("Please select Invoice Date")
		choice.again()
	endif	
	
	if tdisg831.efms = tcyesno.no then
		message("Packing List Not Received")
		choice.again()
	endif	
	
	if isspace(tdisg831.invn) then
		message("Enter Invoice Series!!")
		choice.again()
	endif
	
on.choice:
	
	if len(strip$(tdisg831.invn)) <> 9 then
		|tdisg831.invn = tdisg800.insr
		if tcmcs.dll0050.check.and.generate.order.number(
				3, tdisg831.invn, tdisg800.inng, 
				9, tdisg831.invn ) then
			show.dal.messages(MSG.ALL)
			abort.transaction()
			choice.again()
		else
			temp.invn = tdisg831.invn	
		endif
	else
		temp.invn = tdisg831.invn
	endif

	select	tppdm740.ccur										|GH470CR000.a.s
	from	tppdm740
	where	tppdm740._index1 = {:tdisg831.cprj, :tdisg831.ofbp}
	selectdo
	endselect
		
	if tdisg831.etyp = tdisg.advice.service then						
		num.to.date(tdisg831.invd, yr, mnth, day)
		o.eff.date = date.to.utc(yr, mnth, day, 23 , 59, 59)
						
		if not tcmcs.dll0108.determine.currency.rate.and.rate.factor(	get.compnr(),
										"INR",
										tppdm740.ccur,
										o.eff.date,		
										"SAL",			
										etct.get,		
										o.ratf,
										o.yes.no.flag)	 then	
		endif							
	else								
		select	tdisg878.exrt:etct.get
		from	tdisg878
		where	tdisg878._index1 = {:tppdm740.ccur}
		and	tdisg878.efdt <= :tdisg831.invd
		and	tdisg878.appr = tcyesno.yes 
		selectdo
		selectempty
			etct.get = 1
		endselect
	endif											|GH470CR000.a.e

	select 	tdisg831.invn,
		tdisg831.nvst
		,tdisg831.cinb					|#ISGEC016036.n
		,tdisg831.cino,					|#ISGEC016036.n	
		tdisg831.etct					|GH470CR000.a	
	from	tdisg831 for update
	where	tdisg831._index1 = {:tdisg831.edrn}
	selectdo
		tdisg831.invn = temp.invn
		tdisg831.nvst = tdisg.nvst.preship
		tdisg831.cinb	=	logname$		|#ISGEC016036.n
		tdisg831.cino	=	utc.num()		|#ISGEC016036.n	
		tdisg831.etct	=	etct.get		|GH470CR000.a			
		db.update(ttdisg831,db.retry,e)
	endselect
		
	commit.transaction()		

	i.comm = tcyesno.yes
	dal.start.business.method("tdisg831","update.country.port",ret_val,1)					|#ISG001041.sn
	i.comm = tcyesno.no

