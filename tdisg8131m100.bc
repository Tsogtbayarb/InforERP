	if tdisg831.efms = tcyesno.no then
		message("Packing List Not Received")
		choice.again()
	endif
	
| 	if tdisg831.edrn(1;3)  = "SBA" then
| 	if tdisg831.invn(1;4)  = "C15E" then			|ISGECDV001039.o
	if tdisg831.etyp = tdisg.advice.service then		|ISGECDV001039.n
	else	
		if tdisg831.octy <> "IN " then
		else
			select	tdisg045.rqno,				|GH480CR000.a.s
				tdisg045.note
			from	tdisg045
			where	tdisg045._index3 = {:tdisg831.invn}
			selectdo
				select	tdisg046.amnt
				from	tdisg046
				where	tdisg046._index1 = {:tdisg045.rqno}
				selectdo
					if tdisg045.note = tdisg.notes.credit then
						total.in.amnt.cr.dr = total.in.amnt.cr.dr - tdisg046.amnt
					else
						if tdisg045.note = tdisg.notes.debit then
							total.in.amnt.cr.dr = total.in.amnt.cr.dr + tdisg046.amnt
						endif
					endif
				endselect
			endselect					|GH480CR000.a.e
			
| 			if abs(tdisg831.shmt - tdisg831.amti) > 1.00 then |* Tolerance for 1, as rounding was not preferred			|GH480CR000.a.com
			if abs(tdisg831.shmt - total.in.amnt.cr.dr) > 1.00 then |* Tolerance for 1, as rounding was not preferred		|GH480CR000.a
				message("@Custom Invoice Amount not Equal to Shipping Amount")
				choice.again()
			endif
		endif	
	endif	
	
	if isspace(tdisg831.invn) then
		choice.again()
	endif	
