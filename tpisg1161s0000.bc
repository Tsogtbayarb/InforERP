	where	a_tpisg012._index1 = {:i.cprj,:tpisg011.vers}
	and	a_tpisg012.elem = "99100000"
	selectdo
		hold.bcnt = hold.bcnt + temp.bcnt
		hold.acnt = hold.acnt + temp.acnt
	endselect
	
	select	b_tpisg012.ritb:temp.bwar,
		b_tpisg012.totl:temp.awar
