function read.main.table()
{
	select	tpisg161.*
	from	tpisg161
	where	tpisg161._index1 = {:cont.code, :revn.no}
	as set with 1 rows
	selectdo
		get.contract.header(cont.code)
		rprt_send()
	endselect
}

function extern freeze.contract()
{
	if check.project.cost.sheet.approver() then
		db.set.to.default(ttpisg161)
		db.retry.point() 
		select	tpisg161.*
		from	tpisg161 for update
		where	tpisg161._index1 = {:cont.code, :revn.no}
		as set with 1 rows
		selectdo
			dal.set.field("tpisg161.frzd", tcyesno.yes)		|Freezed
			dal.set.field("tpisg161.frzb", curr.user)		|Freezed by
			dal.set.field("tpisg161.frzo", curr.utc.date)		|Freezed on
			if dal.save.object("tpisg161") = 0 then
				commit.transaction()
			else
				abort.transaction()
				dal.get.error.message(error.message)
				message(error.message)
			endif
		endselect
	else
		message("User is not Authorized to Freez the Contract")
	endif
	refresh.parent(-1)
}

function extern refresh.unfreezd.contract()
{	
	ini.variables()
	
	if check.project.cost.sheet.creator() then
		get.contract.header(cont.code)
		get.contract.lines(cont.code)
		get.extra.claim(cont.code)
		
		select	b_tpisg088.cprj:i.cprj
		from	tpisg088 b_tpisg088
		where	b_tpisg088._index1 = {:cont.code}
		selectdo
			select	tpisg011.*
			from	tpisg011
			where	tpisg011._index1 = {:i.cprj}
			selectdo
			endselect
			ini.variables1()		
			get.ctoh.budget(i.cprj)
			hold.bcth = hold.bcth + ini.contingency
			hold.ctoh = hold.ctoh + contingency.amnt
			get.data.from.tpisg008()
			hold.cnut = hold.cnut + r.tfcy
			hold.waru = hold.waru + r.tfwy
			hold.cnsu = hold.cnsu + r.tfcs		
			get.data.tpisg012.tpisg008()
			get.coningency.s()
		endselect
		update.data.tpisg161()		
	else
		message("User is not authorised to refresh contract")
	endif
	refresh.parent(-1)
}

