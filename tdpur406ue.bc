		endselect
		
		select 	whisg312.rcno
		from	whisg312 for update
		where 	whisg312._index1 = {:tdpur406.rcno,:tdpur406.rseq}
		as set with 1 rows
		selectdo
		selectempty	
| 			dal.new.object("whisg312")
