| 			if tdisgdll0831.insert_pruchase_receipt(
| 							tdpur406.rcno,
| 							tdpur406.rseq,
| 							whinh.oorg.purchase,
| 							tdpur406.orno,
| 							tdpur406.pono,
| 							tdpur406.sqnb,
| 							tdpur406.rsqn,
| 							o.otbp,
| 							o.item,	
| 							tdpur406.qidl,
| 							"",
| 							tdpur406.ddte,
| 							tdpur406.conf) then
				insert.whisg312(o.otbp, o.item)
							
| 				show.dal.messages(MSG.ALL)
| 				return(DALHOOKERROR)
| 			endif
		endselect
		break
	case DAL_UPDATE:
		
		
		
		if tdpur406.rcno = whinh312.rcno and tdpur406.rseq =  whinh312.rcln then
		else
			select 	tdpur401.otbp:o.otbp,
				tdpur401.item:o.item
			from	tdpur401
			where	tdpur401._index1 = {:tdpur406.orno,:tdpur406.pono,:tdpur406.sqnb}
			as set with 1 rows
			selectdo
			endselect
		
			select 	whisg312.*
			from	whisg312 for update
			where 	whisg312._index1 = {:tdpur406.rcno,:tdpur406.rseq}
			selectdo
				dal.change.object("whisg312")
				dal.set.field("whisg312.amnt",tdpur406.damt)
					if tdisgdll0831.insert_pruchase_receipt(
								tdpur406.rcno,
								tdpur406.rseq,
								whinh.oorg.purchase,
								tdpur406.orno,
								0,
								tdpur406.pono,
								tdpur406.sqnb,
								o.otbp,
								o.item,	
								tdpur406.qidl,
								"",
								tdpur406.ddte,
								tdpur406.conf) then
					show.dal.messages(MSG.ALL)
					return(DALHOOKERROR)
				endif
			endselect
		endif
		
		break
	endcase
	
	if tdpur406.conf = tcyesno.yes then
		select 	tdpur401.cprj:o.cprj,
			tdpur401.cspa:o.cspa
		from	tdpur401
		where 	tdpur401._index1 = {:tdpur406.orno,:tdpur406.pono}
		as set with 1 rows
		selectdo
		endselect
		
		
