		o.amnt = tpisgdll0012.ExhaustedAmount(o.cprj,o.cspa)		|#ISGEC016027.sn
		if tpisgdll0012.check_sanction_available_amount_for_po(o.cprj,
						o.vers,o.cspa,o.amnt) then
			return(1)
		endif								|#ISGEC016027.en
	endif
	
	return(0)
}

