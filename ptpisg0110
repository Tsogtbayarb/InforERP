| 	endif
| 	
| 	if tpisg011.appr = tcyesno.yes then
| 		return(true)
| 	endif
| 	
| 	
| 	return(false)
| }

| function extern boolean tpisg011.reas.is.valid()
| {
| 	if tpisg011.revi = tcyesno.yes then
| 		if (tpisg011.reas = "001") or (tpisg011.reas = "002") then
| 			dal.set.error.message("tpisg0110001")
| 			return(DALHOOKERROR)
| 		endif
| 	endif
| 	return(true)
| }

